<% provide(:title, "Log in") %>

<h1 style="font-size:4em">Log in</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3" style="font-family:LongTime; letter-spacing:2px">
		<%= form_for(:session, url: login_path) do |f| %>

			<%= f.label :email %>
			<%= f.text_field :email, class: 'form-control' %>

			<%= f.label :password %>
			<%= f.password_field :password, class: 'form-control' %>

			<%= f.submit "Log in", class: "btn btn-lg btn-primary" %>
		<% end %>
	 
		<br>
		
		<center>
			<p>New user? <%= link_to "Sign up now!", root_path %></p> 
		</center>
	</div>
</div>